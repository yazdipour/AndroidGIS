<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maprl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nextgis.MapFragment">
    <FrameLayout
        android:id="@+id/fl_compass"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="?attr/actionBarSize"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?attr/actionBarSize">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            fab:fab_addButtonColorNormal="?attr/colorPrimary"
            fab:fab_addButtonColorPressed="?attr/colorAccent"
            fab:fab_addButtonPlusIconColor="@android:color/white"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_icon="@drawable/ic_ruler"
            fab:fab_size="mini" />
        <!--Ruler Icon-->
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_status_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:id="@+id/ll_ruler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_status_panel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_ruler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_zoom_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_status_panel"
        android:layout_margin="8dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="@color/colorAccent"
            fab:fab_addButtonColorPressed="@color/colorAccent"
            fab:fab_addButtonPlusIconColor="@android:color/white"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_icon="@drawable/ic_plus"
            fab:fab_size="mini" />
        <!--plus-->

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_addButtonColorNormal="?attr/colorPrimary"
            fab:fab_addButtonColorPressed="?attr/colorAccent"
            fab:fab_addButtonPlusIconColor="@android:color/white"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_icon="@drawable/ic_minus"
            fab:fab_size="mini" />
        <!-- Minus -->
    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_point_by_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_status_panel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:visibility="gone"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonColorPressed="?attr/colorAccent"
        fab:fab_addButtonPlusIconColor="@android:color/white"
        fab:fab_icon="@drawable/ic_accuracy"/>
    <!--point-->

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_status_panel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonColorPressed="?attr/colorAccent"
        fab:fab_addButtonPlusIconColor="@android:color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_geometry_by_walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorPrimary"
            fab:fab_colorPressed="?attr/colorAccent"
            fab:fab_icon="@drawable/ic_accuracy"
            fab:fab_size="mini"/>
        <!--ic_action_maps_directions_walk-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_new_geometry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorPrimary"
            fab:fab_colorPressed="?attr/colorAccent"
            fab:fab_icon="@drawable/ic_accuracy"
            fab:fab_size="mini"/>
        <!--ic_action_edit_light-->
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_current_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorPrimary"
            fab:fab_colorPressed="?attr/colorAccent"
            fab:fab_icon="@drawable/ic_map_yellow_24dp"
            fab:fab_size="mini"/>
        <!--ic_action_maps_place-->
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>